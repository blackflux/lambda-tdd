{
  "name": "lambda-tdd",
  "version": "0.0.0-development",
  "description": "Test Framework for AWS Lambda",
  "main": "lib/tester.js",
  "scripts": {
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-artifact && npm run clean-build && npx semantic-release",
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --source-maps inline --copy-files --include-dotfiles",
    "clean-build": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "gardener": "node gardener",
    "build-artifact": "npm run clean-build && tar -zxvf $(npm pack) && rm *-0.0.0-development.tgz && cd package && tar -zcvf ../release.tar.gz . && cd .. && rm -rf package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simlu/lambda-tdd.git"
  },
  "keywords": [
    "lambda",
    "serverless",
    "api gateway",
    "aws",
    "api",
    "sls",
    "istanbul",
    "mocha",
    "tdd",
    "microservice"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simlu/lambda-tdd/issues"
  },
  "homepage": "https://github.com/simlu/lambda-tdd#readme",
  "dependencies": {
    "app-root-path": "2.0.1",
    "chai": "4.1.2",
    "glob": "7.1.2",
    "js-yaml": "3.11.0",
    "lambda-wrapper": "0.3.0",
    "lodash.defaults": "4.2.0",
    "lodash.get": "4.4.2",
    "lodash.pick": "4.4.0",
    "timekeeper": "2.1.2"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/simlu/lambda-tdd/blob/master/LICENSE"
    }
  ],
  "devDependencies": {
    "coveralls": "3.0.1",
    "js-gardener": "1.23.4",
    "mocha": "5.2.0",
    "request": "2.87.0",
    "semantic-release": "15.5.0",
    "nyc": "11.8.0",
    "babel-cli": "7.0.0-beta.3",
    "nock": "9.3.0",
    "babel-register": "7.0.0-beta.3",
    "babel-eslint": "8.2.3",
    "babel-plugin-transform-flow-comments": "7.0.0-beta.3",
    "babel-preset-flow": "7.0.0-beta.3"
  },
  "engines": {
    "node": ">= 6.10.3"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "nock": "9.3.0"
  },
  "nyc": {
    "tempDirectory": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "flow-typed/*",
      "lib/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
