{
  "name": "lambda-tdd",
  "version": "0.0.0-development",
  "description": "Test Framework for AWS Lambda",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npx babel src --out-dir lib --copy-files --include-dotfiles --config-file ./.babelrc",
    "build-clean": "npm run clean && npm run build",
    "test-simple": "nyc mocha \"./test/**/*.spec.js\"",
    "test": "npm run clean && npm run gardener && npm run test-simple",
    "coveralls": "node ./node_modules/coveralls/bin/coveralls.js < ./coverage/lcov.info",
    "semantic-release": "npm run build-clean && npx semantic-release",
    "gardener": "node gardener"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blackflux/lambda-tdd.git"
  },
  "keywords": [
    "lambda",
    "serverless",
    "api gateway",
    "aws",
    "api",
    "sls",
    "istanbul",
    "mocha",
    "tdd",
    "microservice"
  ],
  "author": "Lukas Siemon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackflux/lambda-tdd/issues"
  },
  "homepage": "https://github.com/blackflux/lambda-tdd#readme",
  "dependencies": {
    "app-root-path": "2.2.1",
    "glob": "7.1.3",
    "js-yaml": "3.13.1",
    "lambda-wrapper": "0.3.0",
    "lodash.defaults": "4.2.0",
    "lodash.get": "4.4.2",
    "lodash.pick": "4.4.0",
    "timekeeper": "2.2.0"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-tdd/blob/master/LICENSE"
    }
  ],
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/register": "7.4.4",
    "@blackflux/eslint-plugin-rules": "1.0.11",
    "@blackflux/robo-config-plugin": "1.7.8",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "coveralls": "3.0.3",
    "eslint": "5.16.0",
    "js-gardener": "2.0.22",
    "mocha": "6.1.4",
    "nock": "10.0.6",
    "nyc": "14.0.0",
    "request": "2.88.0",
    "semantic-release": "15.13.3",
    "tmp": "0.1.0",
    "uuid": "3.3.2"
  },
  "engines": {
    "node": ">= 6.10.3"
  },
  "files": [
    "lib"
  ],
  "peerDependencies": {
    "chai": ">= 4.2.0",
    "nock": ">= 9.3.2"
  },
  "nyc": {
    "tempDir": "./coverage/.nyc_output",
    "report-dir": "./coverage",
    "check-coverage": true,
    "per-file": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "gardener.js",
      "node_modules/*",
      "coverage/*",
      "lib/*"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "extension": [],
    "cache": true,
    "all": true,
    "babel": true
  }
}
