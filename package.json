    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-markdown": "3.0.1",
    "eslint-plugin-mocha": "10.2.0",
    "js-gardener": "5.0.4",
    "minimist": "1.2.8",
    "nock": "13.4.0",
